rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && request.auth.token.role == 'admin';
    }

    match /logs/{userId}/{allPaths=**} {
      allow read, write: if signedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /badges/{userId}/{allPaths=**} {
      allow read, write: if signedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /certifications/{userId}/{allPaths=**} {
      allow read, write: if signedIn() && (request.auth.uid == userId || isAdmin());
    }
  }
}

